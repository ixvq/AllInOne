local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "Murder Mystery 2 Script", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})

local SheriffTab = Window:MakeTab({
    Name = "Sheriff",
    Icon = "nil",
    PremiumOnly = false
})

local GunSection = SheriffTab:AddSection({
    Name = "Gun Section"
})

OrionLib:MakeNotification({
    Name = "Notification",
    Content = "Successfully loaded script!",
    Image = "nil",
    Time = 4
})

SheriffTab:AddButton({
    Name = "Grab gun!",
    Callback = function()
		print("successfully grabbed a gun!")
      end
})



OrionLib:Init()
